{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "LlmBackend": {
    "Strategy": "Failover",
    "TimeoutSeconds": 120,
    "MaxRetries": 3,
    "DefaultTemperature": 0.3,
    "RetryDelayMs": 1000,
    "UseExponentialBackoff": true,
    "Backends": [
      {
        "Name": "EasyNMT",
        "Type": "EasyNMT",
        "BaseUrl": "http://localhost:24080/",
        "Enabled": true,
        "Priority": 1
      },
      {
        "Name": "Ollama-Local",
        "Type": "Ollama",
        "BaseUrl": "http://localhost:11434/",
        "ModelName": "llama3",
        "Temperature": 0.3,
        "Enabled": true,
        "Priority": 2
      },
      {
        "Name": "OpenAI",
        "Type": "OpenAI",
        "BaseUrl": "https://api.openai.com/v1/",
        "ModelName": "gpt-4o-mini",
        "ApiKey": "your-api-key-here",
        "Temperature": 0.3,
        "Enabled": false,
        "Priority": 3
      },
      {
        "Name": "Azure-OpenAI",
        "Type": "AzureOpenAI",
        "BaseUrl": "https://your-resource.openai.azure.com/",
        "DeploymentName": "gpt-4",
        "ApiVersion": "2024-02-15-preview",
        "ApiKey": "your-azure-key-here",
        "Temperature": 0.3,
        "Enabled": false,
        "Priority": 4
      }
    ]
  },
  "ResxTranslator": {
    "Strategy": "Failover",
    "TimeoutSeconds": 120,
    "MaxRetries": 3,
    "DefaultTemperature": 0.3,
    "PreserveFormatting": true
  }
}
